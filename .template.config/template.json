{
    "$schema": "http://json.schemastore.org/template",
    "author": "Grove Games",
    "classifications": [
        "Godot",
        "Package"
    ],
    "name": "Godot Package Template",
    "identity": "GroveGames.GodotPackageTemplate",
    "shortName": "godotpackage",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "GroveGames.GodotPackageTemplate",
    "preferNameDirectory": true,
    "symbols": {
        "name": {
            "type": "parameter",
            "description": "Name of the package in pascal case.",
            "dataType": "text",
            "replaces": "[!name]"
        },
        "author": {
            "type": "parameter",
            "description": "Author of the package in pascal case.",
            "dataType": "text",
            "replaces": "[!author]",
            "defaultValue": "Author"
        },
        "description": {
            "type": "parameter",
            "description": "Description of the package.",
            "dataType": "text",
            "defaultValue": "Description",
            "replaces": "[!description]"
        }
    },
    "sources": [
        {
            "source": "./src/GodotPackage",
            "target": "./"
        }
    ]
}