{
    "$schema": "http://json.schemastore.org/template",
    "author": "Grove Games",
    "classifications": [
        "Godot",
        "Package"
    ],
    "name": "Godot Package",
    "identity": "GroveGames.GodotPackage",
    "shortName": "godotpackage",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "GroveGames.GodotPackage",
    "preferNameDirectory": true,
    "symbols": {
        "name": {
            "type": "parameter",
            "isRequired": true,
            "description": "Name of the package.",
            "replaces": "{{Name}}",
            "fileRename": "{{Name}}"
        },
        "pascalCaseName": {
            "type": "derived",
            "valueSource": "name",
            "valueTransform": "pascalCase",
            "replaces": "{{Name(P)}}",
            "fileRename": "{{Name(P)}}"
        },
        "author": {
            "type": "parameter",
            "isRequired": true,
            "description": "Author of the package.",
            "replaces": "{{Author}}",
            "fileRename": "{{Author}}"
        },
        "pascalCaseAuthor": {
            "type": "derived",
            "valueSource": "author",
            "valueTransform": "pascalCase",
            "replaces": "{{Author(P)}}",
            "fileRename": "{{Author(P)}}"
        },
        "github": {
            "type": "parameter",
            "isRequired": true,
            "description": "The GitHub username associated with the package.",
            "dataType": "text",
            "replaces": "{{Github}}"
        },
        "description": {
            "type": "parameter",
            "defaultValue": "",
            "description": "Description of the package.",
            "dataType": "text",
            "replaces": "{{Description}}"
        },
        "tags": {
            "type": "parameter",
            "defaultValue": "",
            "description": "Semicolon-separated tags that categorize the package in kebab case.",
            "dataType": "text",
            "replaces": "{{Tags}}"
        },
        "SolutionFolderGuid": {
            "type": "generated",
            "generator": "guid",
            "replaces": "{{SolutionFolderGuid}}"
        },
        "SrcGuid": {
            "type": "generated",
            "generator": "guid",
            "replaces": "{{SrcGuid}}"
        },
        "TestsGuid": {
            "type": "generated",
            "generator": "guid",
            "replaces": "{{TestsGuid}}"
        },
        "MainProjectGuid": {
            "type": "generated",
            "generator": "guid",
            "replaces": "{{MainProjectGuid}}"
        },
        "GodotProjectGuid": {
            "type": "generated",
            "generator": "guid",
            "replaces": "{{GodotProjectGuid}}"
        },
        "TestsProjectGuid": {
            "type": "generated",
            "generator": "guid",
            "replaces": "{{TestsProjectGuid}}"
        },
        "GodotTestsProjectGuid": {
            "type": "generated",
            "generator": "guid",
            "replaces": "{{GodotTestsProjectGuid}}"
        }
    },
    "forms": {
        "titleCase": {
            "identifier": "titleCase"
        },
        "invalidChars": {
            "identifier": "replace",
            "pattern": "([\\-_\\.\\ ])",
            "replacement": ""
        },
        "pascalCase": {
            "identifier": "chain",
            "steps": [
                "titleCase",
                "invalidChars"
            ]
        },
        "kebabCase": {
            "identifier": "kebabCase"
        },
        "firtstLowerCase": {
            "identifier": "firstLowerCaseInvariant"
        }
    },
    "sources": [
        {
            "source": "./src",
            "target": "./"
        }
    ]
}